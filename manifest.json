{
  "manifest_version": 2,
  "name": "Email Sent - Dark Souls Notification",
  "description": "Dark Souls themed notification when you send an email (Gmail, Outlook, Yahoo, ProtonMail, Yandex).",
  "version": "2.1",
  "icons": {
    "48": "icon-48.png",
    "96": "icon-96.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "{4fb15d12-23d8-483f-be4c-aa6608ff6dac}",
      "data_collection_permissions": {
        "required": [
          "none"
        ]
      }
    }
  },
  "permissions": [
    "webRequest",
    "https://mail.google.com/*",
    "https://outlook.live.com/*",
    "https://mail.yahoo.com/*",
    "https://mail.proton.me/*",
    "https://mail.yandex.ru/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://mail.google.com/*",
        "https://outlook.live.com/*",
        "https://mail.yahoo.com/*",
        "https://mail.proton.me/*",
        "https://mail.yandex.ru/*"
      ],
      "js": [
        "script.js"
      ],
      "css": [
        "style.css"
      ]
    }
  ],
  "web_accessible_resources": [
    "sound.mp3"
  ]
}